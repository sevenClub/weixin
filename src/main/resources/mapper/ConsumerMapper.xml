<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xin.yangmj.mapper.ConsumerMapper">

    <select id="findConsumerById" resultType="xin.yangmj.entity.Consumer">
        SELECT
          `id`,
          `username`,
          `wechat_openid`,
          `phone`,
          `nickname`,
          `avatar_url`,
          `gender`,
          `email`,
          `deleted`,
          `created_by`,
          `created_at`,
          `updated_by`,
          `updated_at`
        FROM
          `consumer`
        WHERE `id` = #{id}
    </select>

    <select id="findConsumerByWechatOpenid" resultType="xin.yangmj.entity.Consumer">
        SELECT
          `id`,
          `username`,
          `wechat_openid`,
          `phone`,
          `nickname`,
          `avatar_url`,
          `gender`,
          `email`,
          `deleted`,
          `created_by`,
          `created_at`,
          `updated_by`,
          `updated_at`
        FROM
          `consumer`
        WHERE `wechat_openid` = #{wechatOpenid}
    </select>

    
    <insert id="insertConsumer" parameterType="xin.yangmj.entity.Consumer">
        INSERT INTO `consumer` (
          `username`,
          `wechat_openid`,
          `phone`,
          `nickname`,
          `avatar_url`,
          `gender`,
          `email`,
          `deleted`,
          `created_by`,
          `created_at`,
          `updated_by`,
          `updated_at`
        )
        VALUES
          (
            #{username},
            #{wechatOpenid},
            #{phone},
            #{nickname},
            #{avatarUrl},
            #{gender},
            #{email},
            #{deleted},
            #{createdBy},
            #{createdAt},
            #{updatedBy},
            #{updatedAt}
          )
    </insert>

    <update id="updateConsumer" parameterType="xin.yangmj.entity.Consumer">
        UPDATE
          `consumer`
        <trim prefix="SET" suffixOverrides=",">
            <if test="username != null and username != ''">
                `username` = #{username},
            </if>
            <if test="phone != null and phone != ''">
                `phone` = #{phone},
            </if>
            <if test="nickname != null and nickname != ''">
                `nickname` = #{nickname},
            </if>
            <if test="avatarUrl != null and avatarUrl != ''">
                `avatar_url` = #{avatarUrl},
            </if>
            <if test="gender != null">
                `gender` = #{gender},
            </if>
            <if test="email != null and email != null">
                `email` = #{email},
            </if>
            <if test="deleted != null">
                `deleted` = #{deleted},
            </if>
            <if test="updatedBy != null">
                `updated_by` = #{updatedBy},
            </if>
            <if test="updatedAt != null">
                `updated_at` = #{updatedAt},
            </if>
        </trim>
        WHERE `id` = #{id}
    </update>


</mapper>